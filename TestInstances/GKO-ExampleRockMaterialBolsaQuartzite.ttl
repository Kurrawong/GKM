@prefix bol: <http://loop3d.org/GKO/ontology/2019/1/ex-materialCb#> .
@prefix con: <http://loop3d.org/GKO/ontology/2019/1/ex-complexcontact#> .
@prefix dc: <http://purl.org/dc/elements/1.1/> .
@prefix env: <http://loop3d.org/GKO/ontology/2019/1/eventenvironment> .
@prefix gkoc: <http://loop3d.org/GKO/ontology/2019/1/common/> .
@prefix gkog: <http://loop3d.org/GKO/ontology/2019/1/geologicfeature/> .
@prefix gkop: <http://loop3d.org/GKO/ontology/2019/1/geologicproperty/> .
@prefix isca: <http://loop3d.org/GKO/ontology/2019/1/ischart/> .
@prefix lith: <http://loop3d.org/GKO/ontology/2019/1/lithology/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix pro: <http://loop3d.org/GKO/ontology/2019/1/geologicprocess/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix turtle: <http://www.semanticweb.org/owl/owlapi/turtle#> .
@prefix unit: <http://loop3d.org/GKO/ontology/2019/1/uom/> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<http://loop3d.org/GKO/ontology/2019/1/ex-materialCb>
  a owl:Ontology ;
  rdfs:comment "Example encoding of a lithology description for a formation"@en ;
  rdfs:comment "Stephen M. Richard 2019-05-03" ;
  rdfs:comment "description of rock material constituents of Bolsa Quartzite Formation"@en ;
  owl:imports <http://loop3d.org/GKO/ontology/2019/1/loop3dmaster> ;
  owl:imports <http://loop3d.org/GKO/ontology/2019/1/ex-complexcontact> ;
.
bol:Bolsa_Quartzite_Material
  a gkog:Rock_Material ;
  gkoc:hasConstituent bol:Clay_matrix ;
  gkoc:hasConstituent bol:Feldspar_grains ;
  gkoc:hasConstituent bol:Quartz_grains ;
  gkoc:hasPhysicalProperty bol:constituent_part2 ;
  gkoc:hasPhysicalProperty bol:constituent_part3 ;
  gkoc:hasPhysicalProperty [
      a gkoc:Proportion ;
      gkoc:hasUOM [ a unit:percent] ;
      gkoc:hasNumericValue 50 ;
      gkoc:proportionFor bol:Bolsa_Quarzite_Material ;
      gkoc:proportionOf bol:Feldspar_grains ;
      rdfs:label "proportion of feldspar grains"@en ;
    ] ;
  gkoc:hasPhysicalProperty [
      a gkop:Rock_Material_Color ;
      gkoc:hasValue <http://colors.org/maroonbrown> ;
    ] ;
  gkoc:isConstituentOf con:CbFormation ;
  rdfs:comment "describe proportions of constituents, feldspar with blank node, quartz and matrix with label nodes to test variations"@en ;
  rdfs:label "Bolsa Quartzite, basal arkose"@en ;
.
bol:Clay_matrix
  a gkog:Granular_Material ;
  gkoc:hasConstituent gkog:Clay_Mineral ;
  gkoc:hasPhysicalProperty [
      a gkop:Grain_Size_Max ;
      gkoc:hasUOM [ a unit:millimeter ];
      gkoc:hasNumericValue .005 ;
    ] ;
  rdfs:label "Clay matrix constituent"@en ;
.
bol:Feldspar_grains
  a gkog:Granular_Material ;
  gkoc:hasConstituent bol:Feldspar_mineral ;
  gkoc:hasPhysicalProperty [
      a gkop:Grain_Shape ;
      gkoc:hasValue <http://geosciml.org/particleShape/subangular> ;
    ] ;
  gkoc:hasPhysicalProperty [
      a gkop:Grain_Size_Max ;
      gkoc:hasUOM [a unit:millimeter ];
      gkoc:hasNumericValue 5 ;
      rdfs:label "5 mm maximum"@en ;
    ] ;
  gkoc:hasPhysicalProperty [
      a gkop:Grain_Size_Min ;
      gkoc:hasUOM [a unit:millimeter ];
      gkoc:hasNumericValue .02 ;
      rdfs:label "0.02 mm minimum"@en ;
    ] ;
.
bol:Feldspar_mineral
  a gkog:Feldspar ;
  gkoc:hasConstituent [
      a gkoc:Calcium_Element ;
    ] ;
  gkoc:hasConstituent [
      a gkoc:Oxygen_Element ;
    ] ;
  gkoc:hasConstituent [
      a gkoc:Potassium_Element ;
    ] ;
  gkoc:hasConstituent [
      a gkoc:Silicon_Element ;
    ] ;
  gkoc:hasConstituent [
      a gkoc:Sodium_Element ;
    ] ;
  rdfs:label "specific feldspar in this material" ;
.
bol:Quartz_grains
  a gkog:Granular_Material ;
  gkoc:hasConstituent bol:Quartz_mineral ;
  gkoc:hasPhysicalProperty [
      a gkop:Grain_Shape ;
      gkoc:hasValue <http://geosciml.org/particleShape/subangular> ;
      rdfs:label "subangular" ;
    ] ;
  gkoc:hasPhysicalProperty [
      a gkop:Grain_Size_Average ;
      gkoc:hasProperty [
          a gkoc:First_Standard_Deviation_Calculation ;
          gkoc:hasUOM [ a unit:millimeter ];
          gkoc:hasNumericValue .06 ;
        ] ;
      gkoc:hasUOM [a unit:millimeter ] ;
      gkoc:hasNumericValue 3 ;
    ] ;
  gkoc:hasPhysicalProperty [
      a gkop:Grain_Size_Max ;
      gkoc:hasUOM unit:millimeter ;
      gkoc:hasNumericValue 8 ;
    ] ;
  gkoc:hasPhysicalProperty [
      a gkop:Grain_Size_Min ;
      gkoc:hasUOM [a unit:millimeter ];
      gkoc:hasNumericValue .05 ;
    ] ;
.
bol:Quartz_mineral
  a gkog:Quartz ;
  gkoc:hasConstituent [
      a gkoc:Oxygen_Element ;
    ] ;
  gkoc:hasConstituent [
      a gkoc:Silicon_Element ;
    ] ;
  rdfs:comment "include instance of mineral to describe particular physical character and composition of mineral in this material" ;
  rdfs:label "specific quartz in this material" ;
.
bol:constituent_part2
  a gkoc:Proportion ;
  gkoc:hasUOM [a unit:percent ];
  gkoc:hasNumericValue 45 ;
  gkoc:proportionFor bol:Bolsa_Quarzite_Material ;
  gkoc:proportionOf bol:Quartz_grains ;
.
bol:constituent_part3
  a gkoc:Proportion ;
  gkoc:hasUOM [ a unit:percent ];
  gkoc:hasNumericValue 5 ;
  gkoc:proportionFor bol:Bolsa_Quarzite_Material ;
  gkoc:proportionOf bol:Clay_matrix ;
.

